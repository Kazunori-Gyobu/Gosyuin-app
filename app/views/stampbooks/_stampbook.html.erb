<div class="row d-flex">
  <% stampbooks.each do |stampbook| %>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        <%= link_to stampbook.name, stampbook %>
      </div>
      <div class="stampbook text-center">
        <%= image_tag stampbook.cover.to_s, class: "card-img-top" %>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate stampbooks %>
</div>