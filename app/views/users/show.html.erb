<% provide :title, @user.name %>
<div class="card col-sm-10 mx-auto mt-5 px-0">
    <div class="card-header bg-secondary-extend">
        <h2>アカウント情報</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-8">
                <h3><%= @user.name %></h3>
                <%= @user.email %>
            </div>
            <div class="col-sm-4">
                <div class="d-flex flex-column">
                    <%= image_tag @user.avatar.to_s, :class => "float-center border mb-2 mx-auto", :size => "100x100", :alt =>"アバター" %>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-10 mx-auto mt-5 px-0">
        <% if @user.posts.any?%>
        <h3>投稿(<%= @user.posts.count %>)</h3>
        <ol class="posts">
            <%= render @posts %>
        </ol>
        <%= paginate @posts %>
        <% end %>
    </div>
</div>