<% provide :title, 'ユーザー一覧' %>
<div class="container">
    <h2><i class="fas fa-users"></i> ユーザー一覧</h2>
    <ul class="users">
        <% @users.each do |user| %>
        <li>
            <%= image_tag user.avatar.to_s, :class => "avatar circle-avatar", :size => "100x100" %>
            <span class="user-name"><%= link_to user.name, user %></span><br />
            <span class="profile"><%= user.profile %></span>
        </li>
        <% end %>
    </ul>
    <%= paginate @users %>
</div>