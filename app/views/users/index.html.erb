<% provide :title, 'ユーザー一覧' %>
<div class="container">
  <h2><i class="fas fa-users"></i> ユーザー一覧</h2>
  <div class="users">
    <% @users.each do |user| %>
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-md-4 my-auto">
          <%= image_tag user.avatar.to_s, class: "circle-avatar" %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <div class="card-title">
              <%= link_to user.name, user, class: "user-name" %>
            </div>
            <div class="card-text">
              <p class=""><%= user.profile %></p>
            </div>
            <div class="card-text">
              <i class="fas fa-book fa-fw stampbook-color"></i> <%= user.stampbooks.count %>
              <i class="fas fa-stamp fa-fw stamp-color"></i> <%=user.stamps.count %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <%= paginate @users %>
  </div>

</div>