<% provide(:title, "投稿記事一覧") %>
<div class="container">
  <div class="row">
    <% if user_signed_in? %>
    <div class="col-md-10">
      <ul id="myTab" class="nav nav-tabs" rale="tablist">
        <li class="nav-item"><a href="#timeline" id="timeline-tab" class="nav-link active" role="tab" data-toggle="tab" aria-controls="home" aria-selected="true">Myタイムライン</a></li>
        <li class="nav-item"><a href="#posts" id="posts-tab" class="nav-link" role="tab" data-toggle="tab" aria-controls="profile" aria-selected="false">みんなの投稿</a></li>
      </ul>
      <div id="myTabContent" class="tab-content mt-3">
        <div id="timeline" class="tab-pane active" role="tabpanel" aria-labelledby="timeline-tab">
          <h2>Myタイムライン</h2>
          <%= render 'shared/feed' %>
        </div>
        <div id="posts" class="tab-pane" role="tabpanel" aria-labelledby="posts-tab">
          <h2>投稿記事一覧</h2>
          <ul class="posts">
            <%= render @posts %>
          </ul>
          <%= paginate @posts %>
        </div>
      </div>

      <% else %>
      <div class="col-md-10">
        <h2>投稿記事一覧</h2>
        <ul class="posts">
          <%= render @posts %>
        </ul>
        <%= paginate @posts %>
      </div>
      <% end %>
    </div>
  </div>
</div>